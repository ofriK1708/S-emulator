<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<?import javafx.scene.control.TextField?>
<VBox prefHeight="100.0" prefWidth="800.0"
      stylesheets="@FileLoader.css"
      styleClass="file-loader-container"
      xmlns="http://javafx.com/javafx/11.0.1"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="ui.javafx.fileloader.FileLoaderController">

    <!-- Header area with buttons -->
    <HBox alignment="CENTER_LEFT" prefHeight="60.0"
          spacing="20.0" styleClass="header-container">
        <padding>
            <Insets bottom="10.0" left="20.0" right="20.0" top="10.0" />
        </padding>

        <!-- LOAD Button -->
        <Button fx:id="loadButton" mnemonicParsing="false"
                onAction="#onLoadButtonClicked"
                prefHeight="40.0" prefWidth="100.0"
                styleClass="load-button"
                text="LOAD" />

        <!-- CLEAN Button -->
        <Button fx:id="cleanButton" mnemonicParsing="false"
                onAction="#onCleanButtonClicked"
                prefHeight="40.0" prefWidth="100.0"
                styleClass="clean-button"
                text="CLEAN" />

        <TextField fx:id="filePathField" disable="true" promptText="File path" styleClass="text-field-wide" HBox.hgrow="ALWAYS" />

    </HBox>

    <!-- Status area -->
    <HBox alignment="CENTER_LEFT" prefHeight="40.0"
          styleClass="status-container">
        <padding>
            <Insets left="20.0" right="20.0" />
        </padding>

        <Label text="Status: " styleClass="status-label">
            <font>
                <Font size="14.0" />
            </font>
        </Label>

        <Label fx:id="statusText" text="No file loaded"
               styleClass="status-text">
            <font>
                <Font size="14.0" />
            </font>
        </Label>
    </HBox>

</VBox>