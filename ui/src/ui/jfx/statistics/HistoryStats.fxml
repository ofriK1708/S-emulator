<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.VBox?>

<VBox spacing="8" stylesheets="@Statistics.css" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ui.jfx.statistics.HistoryStatsController">

    <Label text="History &amp; Statistics Table" styleClass="component-title">
        <VBox.margin><Insets left="8" right="8" top="6" /></VBox.margin>
    </Label>

    <VBox fx:id="statsTableContainer" spacing="6" styleClass="stats-table-container" VBox.vgrow="ALWAYS">
        <TableView fx:id="statisticsTable" prefHeight="250" VBox.vgrow="ALWAYS">
            <columns>
                <TableColumn fx:id="executionNumberColumn" prefWidth="100" text="Execution Number" />
                <TableColumn fx:id="expandLevelColumn" prefWidth="100" text="Expand Level" />
                <TableColumn fx:id="resultColumn" prefWidth="100" text="Result (Y)" />
                <TableColumn fx:id="cyclesUsedColumn" prefWidth="100" text="Cycles Used" />
                <TableColumn fx:id="argumentColumn" prefWidth="150" text="Argument" />
            </columns>
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
            </columnResizePolicy>
        </TableView>
    </VBox>

</VBox>
