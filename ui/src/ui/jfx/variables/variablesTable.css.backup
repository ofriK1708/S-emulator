/* Modern Variables TableView styling with blue-green-teal color scheme */

/* Font imports for modern look */
@import url('https://fonts.googleapis.com/css2?family=Roboto:wght@300;400;500&display=swap');

.table-view {
    -fx-background-color: transparent;
    -fx-border-color: #e0e0e0;
    -fx-border-radius: 8px;
    -fx-background-radius: 8px;
    -fx-effect: dropshadow(gaussian, rgba(0, 0, 0, 0.1), 10, 0, 0, 5);
    -fx-padding: 0;
    /* Adding table grid lines */
    -fx-table-cell-border-color: rgba(197, 225, 224, 0.5);
    /* Base font for the entire table */
    -fx-font-family: "Roboto", "Segoe UI", "Helvetica Neue", sans-serif;
}

/* Table header styling */
.table-view .column-header-background {
    -fx-background-color: linear-gradient(to bottom, #25a5a0, #1e8883);
    -fx-background-radius: 8px 8px 8px 8px;
    -fx-background-insets: 0 0 0 0;
    -fx-padding: 5px;
}

.table-view .column-header, .table-view .filler {
    -fx-border-width: 0 1 0 1;
    -fx-border-color: transparent #c5e1e0 transparent #c5e1e0;
    -fx-background-color: transparent;
    -fx-text-fill: white;
    -fx-font-size: 14px;
    -fx-font-weight: bold;
    -fx-font-family: "Roboto", "Segoe UI", "Helvetica Neue", sans-serif;
}

.table-view .column-header .label {
    -fx-text-fill: white;
    -fx-alignment: CENTER;
    -fx-font-size: 14px;
    -fx-font-family: "Roboto Medium", "Segoe UI Semibold", "Helvetica Neue", sans-serif;
    -fx-font-weight: 500;
}

/* Table cell styling */
.table-view .table-cell {
    -fx-text-fill: #333333;
    -fx-alignment: CENTER;
    -fx-font-size: 13px;
    -fx-padding: 8px;
    -fx-font-family: "Roboto", "Segoe UI", "Helvetica Neue", sans-serif;
    -fx-font-weight: 400;
}

/* Keep the focus style while showing grid lines */
.table-view:focused {
    -fx-background-color: transparent;
    -fx-focus-color: #25a5a0;
}

/* Scrollbars */
.table-view .scroll-bar:horizontal,
.table-view .scroll-bar:vertical {
    -fx-background-color: transparent;
}

.table-view .scroll-bar:horizontal .thumb,
.table-view .scroll-bar:vertical .thumb {
    -fx-background-color: #92ccc9;
    -fx-background-radius: 5em;
}

.table-view .scroll-bar:horizontal .thumb:hover,
.table-view .scroll-bar:vertical .thumb:hover {
    -fx-background-color: #25a5a0;
}

/* Placeholder label styling */
.placeholder-label {
    -fx-font-family: "Roboto", "Segoe UI", "Helvetica Neue", sans-serif;
    -fx-font-size: 14px;
    -fx-text-fill: #666666;
    -fx-font-style: italic;
}

/* Legacy styles for compatibility */
.status-label {
    -fx-font-weight: bold;
    -fx-font-size: 12px;
    -fx-font-family: "Roboto", "Segoe UI", "Helvetica Neue", sans-serif;
}

.isSuccess-message {
    -fx-text-fill: #25a5a0;
    -fx-font-weight: bold;
}

.variable-item {
    -fx-font-size: 11px;
    -fx-padding: 2 0 2 0;
    -fx-font-family: "Roboto", "Segoe UI", "Helvetica Neue", sans-serif;
}

/* =========================
   VariablesTable Highlighting
   ========================= */

/* Changed variables: highlight with soft yellow-green */
.table-row-cell.changed-variable {
    -fx-background-color: #fff7d6; /* Light yellow background */
    -fx-text-fill: #2e7d32;         /* Dark green text */
    -fx-font-weight: bold;
    -fx-border-width: 0 0 2 0;
    -fx-border-color: #a5d6a7;      /* subtle bottom border for emphasis */
}

/* Hover effect for changed variables */
.table-row-cell.changed-variable:hover {
    -fx-background-color: #fff2b2; /* Slightly stronger yellow */
    -fx-text-fill: #1b5e20;
}

/* Unchanged variables remain subtle */
.table-row-cell.unchanged-variable {
    -fx-background-color: transparent;
    -fx-text-fill: #333333;
}

/* Hover effect for unchanged variables */
.table-row-cell.unchanged-variable:hover {
    -fx-background-color: #d4f0ee;
    -fx-text-background-color: #1a7a76;
}

/* Keep table header and alternating rows intact */
.table-row-cell:odd.unchanged-variable {
    -fx-background-color: #f5f9fa;
}

.table-row-cell:even.unchanged-variable {
    -fx-background-color: #e7f2f5;
}

.table-row-cell.unchanged-variable:selected {
    -fx-background-color: #54bebc;
    -fx-text-background-color: white;
}

