                        <content>
                            <ScrollPane fitToHeight="true" fitToWidth="true" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" prefWidth="526.0">
                                <content>
                                    <fx:include fx:id="historyStats" source="statistics/HistoryStats.fxml" />
                                </content>
                            </ScrollPane>
                        </content>
                    </TitledPane>
                </VBox>
            </items>
        </SplitPane>
    </center>
</BorderPane>
