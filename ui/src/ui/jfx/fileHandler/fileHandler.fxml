<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.HBox?>
<?import java.lang.String?>
<HBox spacing="10" styleClass="hbox" stylesheets="@fileHandler.css" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ui.jfx.fileHandler.FileHandlerController">
    <Button fx:id="addFileButton" minWidth="100.0" onMousePressed="#onAddFileButtonPressed" styleClass="blue-teal-button" text="Add File" />
    <Button fx:id="clearButton" onMousePressed="#onClearButtonPressed" styleClass="clear-button" text="Clear" />
    <Label fx:id="filePathField" alignment="CENTER" HBox.hgrow="ALWAYS">
      <HBox.margin>
          <Insets top="0.0"/>
      </HBox.margin>
      <styleClass>
          <String fx:value="file-path-label"/>
      </styleClass>
   </Label>
</HBox>
