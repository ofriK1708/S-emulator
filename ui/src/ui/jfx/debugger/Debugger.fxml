<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.SVGPath?>

<VBox spacing="12.0"
      xmlns="http://javafx.com/javafx/22.0.2"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="ui.jfx.debugger.DebuggerController"
      stylesheets="@Debugger.css"
      styleClass="debugger">

    <children>
        <GridPane hgap="20" vgap="15">

            <!-- Row 1 -->
            <Button fx:id="stop" text="Stop" onAction="#handleStop"
                    GridPane.rowIndex="0" GridPane.columnIndex="0"
                    styleClass="pill-button debug-stop">
                <graphic>
                    <SVGPath content="M4.893 0a.5.5 0 0 0-.353.146L.146 4.54A.5.5 0 0 0 0 4.893v6.214a.5.5 0 0 0 .146.353l4.394 4.394a.5.5 0 0 0 .353.146h6.214a.5.5 0 0 0 .353-.146l4.394-4.394a.5.5 0 0 0 .146-.353V4.893a.5.5 0 0 0-.146-.353L11.46.146A.5.5 0 0 0 11.107 0z"/>
                </graphic>
            </Button>

            <Button fx:id="resume" text="Resume" onAction="#handleResume"
                    GridPane.rowIndex="0" GridPane.columnIndex="1"
                    styleClass="pill-button debug-resume">
                <graphic>
                    <SVGPath content="M6 18V6h2v12zm4 0l10-6l-10-6z"/>
                </graphic>
            </Button>

            <!-- Row 2 -->
            <Button fx:id="stepOver" text="Step Over" onAction="#handleStepOver"
                    GridPane.rowIndex="1" GridPane.columnIndex="0"
                    styleClass="pill-button debug-stepOver">
                <graphic>
                    <SVGPath content="M12 19q-1.25 0-2.125-.875T9 16t.875-2.125T12 13t2.125.875T15 16t-.875 2.125T12 19m-7.925-7q.35-2.975 2.6-4.988T11.975 5q1.825 0 3.375.738T18 7.75V5h2v7h-7v-2h4.2q-.8-1.35-2.162-2.175T12 7Q9.8 7 8.125 8.425T6.1 12z"/>
                </graphic>
            </Button>

            <Button fx:id="stepBackward" text="Step Backward" onAction="#handleStepBackward"
                    GridPane.rowIndex="1" GridPane.columnIndex="1"
                    styleClass="pill-button debug-stepBackward">
                <graphic>
                    <SVGPath content="M7 19v-2h7.1q1.575 0 2.738-1T18 13.5T16.838 11T14.1 10H7.8l2.6 2.6L9 14L4 9l5-5l1.4 1.4L7.8 8h6.3q2.425 0 4.163 1.575T20 13.5t-1.737 3.925T14.1 19z"/>
                </graphic>
            </Button>

        </GridPane>
    </children>

    <padding>
        <Insets bottom="12.0" left="12.0" right="12.0" top="12.0"/>
    </padding>
</VBox>
