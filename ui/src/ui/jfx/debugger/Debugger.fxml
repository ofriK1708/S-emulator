<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.shape.SVGPath?>
<VBox xmlns:fx="http://javafx.com/fxml/1" spacing="12.0" styleClass="debugger" stylesheets="@Debugger.css"
      xmlns="http://javafx.com/javafx/24.0.1" fx:controller="ui.jfx.debugger.DebuggerController">

    <children>
        <GridPane hgap="20" vgap="15">

            <!-- Row 1 -->
            <Button fx:id="stop" onAction="#handleStop" styleClass="pill-button, debug-stop" GridPane.columnIndex="0"
                    GridPane.rowIndex="0">
                <graphic>
                    <HBox alignment="CENTER" spacing="10.0">
                        <children>
                            <Label styleClass="button-text" text="Stop"/>
                            <SVGPath content="M4.5 1.5a3 3 0 0 0-3 3v7a3 3 0 0 0 3 3h7a3 3 0 0 0 3-3v-7a3 3 0 0 0-3-3z"
                                     fill="#e53935" strokeType="OUTSIDE"/>
                        </children>
                    </HBox>
                </graphic>
            </Button>

            <Button fx:id="resume" onAction="#handleResume" styleClass="pill-button, debug-resume"
                    GridPane.columnIndex="1" GridPane.rowIndex="0">
                <graphic>
                    <HBox alignment="CENTER" spacing="10.0">
                        <children>
                            <Label styleClass="button-text" text="Resume"/>
                            <SVGPath content="M6 18V6h2v12zm4 0l10-6l-10-6z" fill="#00f800"/>
                        </children>
                    </HBox>
                </graphic>
            </Button>

            <!-- Row 2 -->
            <Button fx:id="stepOver" onAction="#handleStepOver" styleClass="pill-button, debug-stepOver"
                    GridPane.columnIndex="0" GridPane.rowIndex="1">
                <graphic>
                    <HBox alignment="CENTER" spacing="10.0">
                        <children>
                            <Label styleClass="button-text" text="Step Over"/>
                            <SVGPath
                                    content="M12 19q-1.25 0-2.125-.875T9 16t.875-2.125T12 13t2.125.875T15 16t-.875 2.125T12 19m-7.925-7q.35-2.975 2.6-4.988T11.975 5q1.825 0 3.375.738T18 7.75V5h2v7h-7v-2h4.2q-.8-1.35-2.162-2.175T12 7Q9.8 7 8.125 8.425T6.1 12z"
                                    fill="WHITE"/>
                        </children>
                    </HBox>
                </graphic>
            </Button>

            <Button fx:id="stepBackward" onAction="#handleStepBackward" styleClass="pill-button, debug-stepBackward"
                    GridPane.columnIndex="1" GridPane.rowIndex="1">
                <graphic>
                    <HBox alignment="CENTER" spacing="10.0">
                        <children>
                            <Label styleClass="button-text" text="Step Back"/>
                            <SVGPath
                                    content="M1.75 5.75v-4h1.5v2.542c1.145-1.359 2.911-2.209 4.84-2.209c3.177 0 5.92 2.307 6.16 5.398l.02.269h-1.5l-.022-.226c-.212-2.195-2.202-3.94-4.656-3.94c-1.736 0-3.244.875-4.05 2.166h2.83v1.5H2.707l-.961-.975V5.75h.003zM8 14a2 2 0 1 1 0-4a2 2 0 0 1 0 4"
                                    fill="WHITE" scaleX="1.3" scaleY="1.3"/>
                        </children>
                    </HBox>
                </graphic>
            </Button>
            <columnConstraints>
                <ColumnConstraints/>
                <ColumnConstraints/>
            </columnConstraints>
            <rowConstraints>
                <RowConstraints/>
                <RowConstraints/>
            </rowConstraints>

        </GridPane>
    </children>

    <padding>
        <Insets bottom="12.0" left="12.0" right="12.0" top="12.0"/>
    </padding>
</VBox>
