<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TitledPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<BorderPane xmlns="http://javafx.com/javafx/22"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="jfx.AppController"
            prefHeight="720.0" prefWidth="1200.0"
            minHeight="-Infinity" minWidth="-Infinity"
            maxHeight="-Infinity" maxWidth="-Infinity">

    <!-- TOP: file bar + program/function selector row -->
    <top>
        <VBox spacing="8.0">
            <padding>
                <Insets top="8" right="12" bottom="8" left="12"/>
            </padding>
            <fx:include fx:id="fileHandler" source="fileHandler/fileHandler.fxml"/>
            <fx:include fx:id="ProgramFunction" source="program/function/ProgramFunction.fxml"/>
        </VBox>
    </top>

    <!-- CENTER: instructions table + summary line (placeholders for now) -->
    <center>
        <VBox spacing="10.0">
            <padding>
                <Insets top="6" right="12" bottom="6" left="12"/>
            </padding>
            <StackPane prefHeight="420.0">
                <Label text="Instructions table (placeholder)"/>
            </StackPane>
            <StackPane prefHeight="48.0">
                <Label text="Summary line (placeholder)"/>
            </StackPane>
        </VBox>
    </center>

    <!-- RIGHT: Debugger column -->
    <right>
        <VBox spacing="12.0" prefWidth="380.0">
            <padding>
                <Insets top="6" right="12" bottom="6"/>
            </padding>

            <TitledPane text="Debugger\\Execution" collapsible="false">
                <content>
                    <VBox spacing="8.0">
                        <fx:include fx:id="debugControls" source="debuger/Debuger.fxml"/>
                    </VBox>
                </content>
            </TitledPane>

            <HBox spacing="12.0">
                <StackPane VBox.vgrow="ALWAYS" prefHeight="160.0">
                    <Label text="Variables (placeholder)"/>
                </StackPane>
                <StackPane VBox.vgrow="ALWAYS" prefHeight="160.0">
                    <Label text="Execution Inputs (placeholder)"/>
                </StackPane>
            </HBox>

            <StackPane prefHeight="84.0" maxHeight="84.0" VBox.vgrow="NEVER" styleClass="cycles-compact">
                <fx:include fx:id="cycles" source="cycles/cycles.fxml"/>
            </StackPane>

            <fx:include fx:id="HistoryStats" source="statistics/HistoryStats.fxml"/>
        </VBox>
    </right>

    <!-- BOTTOM: selected instruction history chain (placeholder) -->
    <bottom>
        <StackPane prefHeight="160.0">
            <Label text="Selected Instruction history chain (placeholder)"/>
        </StackPane>
    </bottom>
</BorderPane>
