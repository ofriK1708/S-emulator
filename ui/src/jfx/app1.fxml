<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<BorderPane xmlns="http://javafx.com/javafx/22"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="jfx.AppController"
            prefHeight="720.0" prefWidth="1200.0"
            minHeight="-Infinity" minWidth="-Infinity"
            maxHeight="-Infinity" maxWidth="-Infinity">

    <!-- TOP: file bar + program/function selector row -->
    <top>
        <VBox spacing="8.0">
            <padding>
                <Insets top="8" right="12" bottom="8" left="12"/>
            </padding>
            <fx:include fx:id="fileHandler" source="fileHandler/fileHandler.fxml"/>
            <fx:include fx:id="ProgramFunction" source="program/function/ProgramFunction.fxml"/>
        </VBox>
    </top>

    <!-- CENTER: instructions table + summary line (placeholders for now) -->
    <center>
        <VBox spacing="10.0">
            <padding>
                <Insets top="6" right="12" bottom="6" left="12"/>
            </padding>
            <StackPane prefHeight="420.0">
                <Label text="Instructions table (will be implemented next)"/>
            </StackPane>
            <StackPane prefHeight="48.0">
                <Label text="Summary line (will be implemented next)"/>
            </StackPane>
        </VBox>
    </center>

    <!-- RIGHT: Other components (will be implemented next) -->
    <right>
        <VBox spacing="12.0" prefWidth="380.0">
            <padding>
                <Insets top="6" right="12" bottom="6"/>
            </padding>

            <StackPane prefHeight="200.0">
                <Label text="Debugger controls (will be implemented next)"/>
            </StackPane>

            <StackPane prefHeight="84.0" maxHeight="84.0" VBox.vgrow="NEVER">
                <fx:include fx:id="cycles" source="cycles/cycles.fxml"/>
            </StackPane>

            <StackPane prefHeight="160.0">
                <Label text="Statistics (will be implemented next)"/>
            </StackPane>
        </VBox>
    </right>

    <!-- BOTTOM: selected instruction history chain (will be implemented next) -->
    <bottom>
        <StackPane prefHeight="160.0">
            <Label text="Selected Instruction history chain (will be implemented next)"/>
        </StackPane>
    </bottom>
</BorderPane>
