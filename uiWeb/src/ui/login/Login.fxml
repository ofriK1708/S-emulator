<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<VBox xmlns:fx="http://javafx.com/fxml/1" alignment="CENTER" spacing="20" stylesheets="@Login.css"
      xmlns="http://javafx.com/javafx/17.0.12" fx:controller="ui.login.LoginController">

    <padding>
        <Insets bottom="40" left="40" right="40" top="40"/>
    </padding>

    <children>
        <!-- Title Label -->
        <Label style="-fx-font-size: 24px; -fx-padding: 0 0 10 0;" styleClass="instruction-label"
               text="Welcome to S-Emulator"/>

        <!-- Secondary Label -->
        <Label style="-fx-font-size: 15px; -fx-padding: 0 0 5 0;" styleClass="label"
               text="Please enter your username:"/>

        <!-- Username Input Field -->
        <TextField fx:id="usernameField" prefWidth="300" promptText="Enter your username" style="-fx-font-size: 15px;"
                   styleClass="text-field"/>

        <!-- Continue Button -->
        <Button fx:id="loginButton" defaultButton="true" prefWidth="200"
                style="-fx-font-size: 15px; -fx-padding: 12px 32px;" styleClass="button" text="Register"/>
    </children>

</VBox>
