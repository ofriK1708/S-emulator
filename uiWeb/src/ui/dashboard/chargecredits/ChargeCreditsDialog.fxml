<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<VBox xmlns:fx="http://javafx.com/fxml/1" fx:id="root" spacing="15" stylesheets="@ChargeCreditsDialog.css"
      xmlns="http://javafx.com/javafx/17.0.12"
      fx:controller="ui.dashboard.chargecredits.ChargeCreditsDialogController"
      alignment="CENTER">
    <padding>
        <Insets bottom="20" left="20" right="20" top="20"/>
    </padding>
    <children>
        <Label fx:id="finalAmountLabel" styleClass="final-amount-label" text="0"/>

        <GridPane hgap="10" vgap="10">
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
            </columnConstraints>
            <children>
                <Button onAction="#add1000" text="1,000" GridPane.columnIndex="0" GridPane.rowIndex="0"
                        maxWidth="Infinity"/>
                <Button onAction="#add10000" text="10,000" GridPane.columnIndex="1" GridPane.rowIndex="0"
                        maxWidth="Infinity"/>
                <Button onAction="#add100000" text="100,000" GridPane.columnIndex="0" GridPane.rowIndex="1"
                        maxWidth="Infinity"/>
                <Button onAction="#add1000000" text="1,000,000" GridPane.columnIndex="1" GridPane.rowIndex="1"
                        maxWidth="Infinity"/>
            </children>
        </GridPane>

        <HBox spacing="10" alignment="CENTER">
            <TextField fx:id="customAmountField" promptText="Enter custom amount"/>
            <Button fx:id="setButton" onAction="#setCustomAmount" text="Set"/>
        </HBox>
        <Label fx:id="errorLabel" styleClass="error-label" text="Invalid amount. Please enter a positive integer."
               visible="false"/>


        <HBox alignment="CENTER_RIGHT" spacing="10">
            <Button fx:id="confirmButton" onAction="#onConfirm" text="Confirm"/>
            <Button fx:id="cancelButton" onAction="#onCancel" text="Cancel"/>
        </HBox>
    </children>
</VBox>
