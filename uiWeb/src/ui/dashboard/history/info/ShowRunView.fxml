<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.shape.SVGPath?>
<ScrollPane xmlns:fx="http://javafx.com/fxml/1" fitToHeight="true" fitToWidth="true"
            xmlns="http://javafx.com/javafx/24.0.1" fx:controller="ui.dashboard.history.info.ShowRunController">
    <content>
        <VBox prefHeight="500.0" prefWidth="600.0" spacing="12.0" styleClass="window" stylesheets="@ShowRunView.css">

            <padding>
                <Insets bottom="16.0" left="16.0" right="16.0" top="16.0"/>
            </padding>

            <children>
                <!-- Header section with execution info -->
                <VBox spacing="8.0">
                    <children>
                        <HBox spacing="5.0">
                            <children>
                                <Label fx:id="programNameLabel" styleClass="header-label" text="Program Name"/>
                                <Label fx:id="titleLabel" styleClass="header-label" text="Execution Results"/>
                            </children>
                        </HBox>

                        <HBox alignment="CENTER_LEFT" spacing="16.0">
                            <children>
                                <Label fx:id="executionInfoLabel" styleClass="info-label" text="Execution #1"/>
                                <Separator orientation="VERTICAL" prefHeight="20.0"/>
                                <Label fx:id="expandLevelLabel" styleClass="info-label" text="Expand Level: 0"/>
                                <Separator orientation="VERTICAL" prefHeight="20.0"/>
                                <Label fx:id="cyclesLabel" styleClass="info-label" text="Cycles: 0"/>
                                <Separator orientation="VERTICAL" prefHeight="20.0"/>
                                <Label fx:id="resultLabel" styleClass="info-label" text="Result: 0"/>
                            </children>
                        </HBox>
                    </children>
                </VBox>

                <!-- Arguments section -->
                <VBox spacing="8.0">
                    <children>
                        <Label styleClass="section-header" text="Program Arguments:"/>
                        <Label fx:id="argumentsLabel" styleClass="content-label" text="No arguments" wrapText="true"/>
                    </children>
                </VBox>

                <!-- Variables table section -->
                <VBox spacing="8.0" VBox.vgrow="ALWAYS">
                    <children>
                        <Label styleClass="section-header" text="Final Variable States:"/>

                        <TableView fx:id="variablesTable" styleClass="variables-table" VBox.vgrow="ALWAYS">
                            <columns>
                                <TableColumn fx:id="variableNameColumn" prefWidth="250.0" text="Variable Name"/>
                                <TableColumn fx:id="variableValueColumn" prefWidth="150.0" text="Final Value"/>
                            </columns>
                            <columnResizePolicy>
                                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                            </columnResizePolicy>
                            <placeholder>
                                <Label styleClass="placeholder-label" text="No variables to display"/>
                            </placeholder>
                        </TableView>
                    </children>
                </VBox>

                <!-- Close button only -->
                <HBox alignment="CENTER" spacing="12.0">
                    <children>
                        <Button fx:id="closeButton" onAction="#handleClose" prefHeight="35.0" prefWidth="120.0"
                                text="Close">
                            <graphic>
                                <SVGPath
                                        content="M19 6.41L17.59 5 12 10.59 6.41 5 5 6.41 10.59 12 5 17.59 6.41 19 12 13.41 17.59 19 19 17.59 13.41 12z"
                                        fill="#ffffff" scaleX="0.7" scaleY="0.7"/>
                            </graphic>
                            <tooltip>
                                <Tooltip text="Close this window"/>
                            </tooltip>
                        </Button>
                    </children>
                </HBox>
            </children>
        </VBox>
    </content>
</ScrollPane>
