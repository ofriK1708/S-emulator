<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<AnchorPane xmlns:fx="http://javafx.com/fxml"
            xmlns="http://javafx.com/javafx"
            fx:controller="ui.web.jfx.dashboard.functions.FunctionsPanelController"
            styleClass="panel-container, functions-panel">

    <VBox AnchorPane.topAnchor="0" AnchorPane.bottomAnchor="0"
          AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0"
          spacing="10">

        <padding>
            <Insets top="10" right="10" bottom="10" left="10"/>
        </padding>

        <!-- Panel Title -->
        <Label text="Available Functions" styleClass="panel-title"/>

        <!-- Functions Table -->
        <TableView fx:id="functionsTableView"
                   VBox.vgrow="ALWAYS"
                   styleClass="functions-table">

            <columns>
                <TableColumn fx:id="functionNameColumn"
                             text="Function Name"
                             prefWidth="150"/>
                <TableColumn fx:id="programNameColumn"
                             text="Program Name"
                             prefWidth="120"/>
                <TableColumn fx:id="uploadedByColumn"
                             text="Uploaded By"
                             prefWidth="100"/>
                <TableColumn fx:id="instructionCountColumn"
                             text="Instruction Count (L0)"
                             prefWidth="140"/>
                <TableColumn fx:id="maxExpandLevelColumn"
                             text="Max Expand Level"
                             prefWidth="120"/>
            </columns>

            <placeholder>
                <Label text="No functions available.\nLoad a programDTO file to view functions."
                       styleClass="placeholder-text"/>
            </placeholder>

        </TableView>

        <!-- Execute Function Button -->
        <Button fx:id="executeFunctionButton"
                text="Execute Function"
                onAction="#handleExecuteFunction"
                maxWidth="Infinity"
                styleClass="panel-button, execute-button"
                disable="true"/>

    </VBox>

</AnchorPane>