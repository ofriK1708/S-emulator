<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<VBox xmlns:fx="http://javafx.com/fxml/1" alignment="CENTER" spacing="20" styleClass="root"
      stylesheets="@fileLoader.css" xmlns="http://javafx.com/javafx/24.0.1"
      fx:controller="ui.web.jfx.fileLoader.FileLoaderController">
    <padding>
        <Insets bottom="30.0" left="30.0" right="30.0" top="30.0"/>
    </padding>

    <!-- File loading label section -->
    <HBox alignment="CENTER_LEFT" spacing="8">
        <Label styleClass="label" text="Loading file :"/>
        <Label fx:id="fileNameLabel" styleClass="file-name-label" text="example.txt"/>
    </HBox>

    <!-- Separator line -->
    <Separator/>
    <HBox alignment="CENTER">
        <children>
            <Label fx:id="taskMessage" alignment="CENTER" text="task message"/>
        </children>
    </HBox>

    <!-- Progress section -->
    <HBox alignment="CENTER" spacing="12">
        <Label fx:id="percentLabel" styleClass="percent-label" text="0%"/>
        <ProgressBar fx:id="progressBar" prefWidth="300.0" progress="0.0" styleClass="loading-progress-bar"/>
    </HBox>
</VBox>
