<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import java.lang.String?>
<ScrollPane xmlns:fx="http://javafx.com/fxml/1" fitToHeight="true" fitToWidth="true" stylesheets="@styles/style.css"
            xmlns="http://javafx.com/javafx/24.0.1" fx:controller="ui.execution.ExecutionController">
    <content>
        <BorderPane maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" minHeight="-Infinity"
                    minWidth="-Infinity" styleClass="execution-main-border">

            <!-- TOP: Execution Header + Program/Function Selector -->
            <top>
                <VBox spacing="8.0">
                    <padding>
                        <Insets bottom="8" left="12" right="12" top="8"/>
                    </padding>
                    <!-- Execution Header-->
                    <fx:include fx:id="executionHeader" source="execution/header/executionHeader.fxml"/>

                    <!-- Program/Function Selector -->
                    <fx:include fx:id="programFunction" source="program/function/programFunction.fxml"/>
                </VBox>
            </top>

            <!-- CENTER: Instructions Table + Summary + Controls -->
            <center>
                <SplitPane dividerPositions="0.55" minHeight="0.0" minWidth="-Infinity">
                    <items>
                        <!-- LEFT: Instructions Area -->
                        <GridPane maxHeight="1.7976931348623157E308" minWidth="-Infinity" vgap="10.0">
                            <columnConstraints>
                                <ColumnConstraints hgrow="ALWAYS" minWidth="10.0"/>
                            </columnConstraints>
                            <rowConstraints>
                                <RowConstraints minHeight="10.0" vgrow="ALWAYS"/>
                                <RowConstraints maxHeight="80.0" minHeight="0.0" prefHeight="70.0" vgrow="NEVER"/>
                                <RowConstraints minHeight="10.0" vgrow="ALWAYS"/>
                            </rowConstraints>
                            <children>
                                <!-- Main Instructions Table -->
                                <fx:include fx:id="instructionsTable" source="instruction/InstructionsTable.fxml"
                                            GridPane.rowIndex="0"/>

                                <!-- Summary Line -->
                                <fx:include fx:id="summaryLine" source="summaryLine/summaryLine.fxml"
                                            GridPane.halignment="CENTER" GridPane.hgrow="ALWAYS" GridPane.rowIndex="1"
                                            GridPane.valignment="CENTER" GridPane.vgrow="NEVER"/>

                                <!-- Derived Instructions Table -->
                                <fx:include fx:id="derivedInstructionsTable" source="instruction/InstructionsTable.fxml"
                                            GridPane.rowIndex="2"/>
                            </children>
                        </GridPane>

                        <!-- RIGHT: Controls and Variables Panel -->
                        <ScrollPane fitToWidth="true" maxWidth="1.7976931348623157E308" prefWidth="860.0">
                            <content>
                                <VBox maxHeight="-Infinity" maxWidth="1.7976931348623157E308" minWidth="-Infinity"
                                      spacing="12.0">
                                    <padding>
                                        <Insets bottom="6.0" right="12.0" top="6.0"/>
                                    </padding>

                                    <!-- Run Controls Section -->
                                    <TitledPane fx:id="runControlsTitledPane" alignment="CENTER" text="Run Controls"
                                                VBox.vgrow="ALWAYS">
                                        <content>
                                            <VBox alignment="CENTER" spacing="8.0">
                                                <fx:include fx:id="runControls" source="runControls/runControls.fxml"/>
                                            </VBox>
                                        </content>
                                    </TitledPane>

                                    <!-- Debug Controls Section -->
                                    <TitledPane fx:id="debugControlsTitledPane" alignment="CENTER" minWidth="-Infinity"
                                                text="Debug Controls">
                                        <content>
                                            <HBox alignment="CENTER" minWidth="-Infinity" spacing="8.0">
                                                <fx:include fx:id="debugControls" source="debugger/Debugger.fxml"/>
                                            </HBox>
                                        </content>
                                    </TitledPane>

                                    <!-- Variables & Cycles Section -->
                                    <TitledPane fx:id="variablesTitledPane" alignment="CENTER"
                                                maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308"
                                                minHeight="-Infinity" minWidth="-Infinity"
                                                text="Arguments / Variables / Cycles" VBox.vgrow="ALWAYS">
                                        <content>
                                            <GridPane alignment="CENTER" hgap="20.0" maxHeight="1.7976931348623157E308"
                                                      maxWidth="1.7976931348623157E308" vgap="5.0">
                                                <children>
                                                    <!-- Arguments Table -->
                                                    <fx:include fx:id="argumentsTable"
                                                                source="variables/variablesTable.fxml"
                                                                GridPane.halignment="CENTER" GridPane.hgrow="ALWAYS"
                                                                GridPane.rowSpan="2" GridPane.valignment="CENTER"
                                                                GridPane.vgrow="ALWAYS"/>

                                                    <!-- All Variables Table -->
                                                    <fx:include fx:id="allVarsTable"
                                                                source="variables/variablesTable.fxml"
                                                                GridPane.columnIndex="1" GridPane.hgrow="ALWAYS"
                                                                GridPane.vgrow="ALWAYS"/>

                                                    <!-- Cycles Display -->
                                                    <fx:include fx:id="cycles" source="cycles/cycles.fxml"
                                                                GridPane.halignment="CENTER" GridPane.hgrow="ALWAYS"
                                                                GridPane.rowIndex="3" GridPane.valignment="CENTER"
                                                                GridPane.vgrow="ALWAYS"/>
                                                </children>
                                                <columnConstraints>
                                                    <ColumnConstraints/>
                                                    <ColumnConstraints/>
                                                </columnConstraints>
                                                <rowConstraints>
                                                    <RowConstraints/>
                                                    <RowConstraints/>
                                                    <RowConstraints/>
                                                    <RowConstraints/>
                                                </rowConstraints>
                                            </GridPane>
                                        </content>
                                    </TitledPane>
                                    <HBox alignment="CENTER" VBox.vgrow="ALWAYS">
                                        <children>
                                            <Button fx:id="backToDashboardButton" cancelButton="true"
                                                    mnemonicParsing="false" onAction="#handleBackToDashboard"
                                                    prefHeight="43.0" prefWidth="688.0" text="Back to Dashboard"
                                                    HBox.hgrow="ALWAYS">
                                                <styleClass>
                                                    <String fx:value="pill-button"/>
                                                    <String fx:value="pill-green"/>
                                                </styleClass>
                                            </Button>
                                        </children>
                                    </HBox>

                                </VBox>
                            </content>
                        </ScrollPane>
                    </items>
                </SplitPane>
            </center>
        </BorderPane>
    </content>
</ScrollPane>
