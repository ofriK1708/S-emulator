<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<VBox xmlns:fx="http://javafx.com/fxml/1"
      xmlns="http://javafx.com/javafx/17.0.12"
      fx:controller="ui.execution.login.LoginController"
      alignment="CENTER"
      spacing="20"
      stylesheets="@login.css">

    <padding>
        <Insets top="40" right="40" bottom="40" left="40"/>
    </padding>

    <children>
        <!-- Title Label -->
        <Label text="Welcome to S-Emulator"
               styleClass="instruction-label"
               style="-fx-font-size: 24px; -fx-padding: 0 0 10 0;"/>

        <!-- Secondary Label -->
        <Label text="Please enter your username:"
               styleClass="label"
               style="-fx-font-size: 15px; -fx-padding: 0 0 5 0;"/>

        <!-- Username Input Field -->
        <TextField fx:id="usernameField"
                   promptText="Enter your username"
                   styleClass="text-field"
                   prefWidth="300"
                   style="-fx-font-size: 15px;"/>

        <!-- Continue Button -->
        <Button fx:id="loginButton"
                text="Continue"
                defaultButton="true"
                styleClass="button"
                prefWidth="200"
                style="-fx-font-size: 15px; -fx-padding: 12px 32px;"/>
    </children>

</VBox>