/* Modern styling for cycles view */

.root {
    -fx-background-color: linear-gradient(to bottom right, #f8f9fa, #e9ecef);
    -fx-padding: 20px;
}

.hbox {
    -fx-background-color: white;
    -fx-background-radius: 10px;
    -fx-padding: 20px;
    -fx-effect: dropshadow(gaussian, rgba(0, 0, 0, 0.1), 10, 0.1, 0, 4);
    -fx-alignment: center-left;
}

.label {
    -fx-text-fill: #343a40;
}

.cycles-label {
    -fx-font-family: "Segoe UI", Helvetica, Arial, sans-serif;
    -fx-font-weight: bold;
    -fx-text-fill: #495057;
}

.value-label {
    -fx-font-family: "Segoe UI", Helvetica, Arial, sans-serif;
    -fx-background-color: #f1f3f5;
    -fx-background-radius: 8px;
    -fx-padding: 5px 15px;
    -fx-text-fill: #0d6efd;
    -fx-font-weight: bold;
    -fx-min-width: 80px;
    -fx-alignment: center;
    -fx-effect: innershadow(gaussian, rgba(0, 0, 0, 0.05), 2, 0, 0, 1);
}

.button {
    -fx-background-color: linear-gradient(to bottom, #0d6efd, #0b5ed7);
    -fx-text-fill: white;
    -fx-font-size: 14px;
    -fx-font-weight: bold;
    -fx-padding: 8px 16px;
    -fx-background-radius: 8px;
    -fx-cursor: hand;
    -fx-effect: dropshadow(gaussian, rgba(0, 0, 0, 0.2), 4, 0, 0, 2);
}

.button:hover {
    -fx-background-color: linear-gradient(to bottom, #0b5ed7, #0a58ca);
}

.button:pressed {
    -fx-background-color: #0a58ca;
}
