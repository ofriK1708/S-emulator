<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.*?>
<HBox xmlns:fx="http://javafx.com/fxml"
      xmlns="http://javafx.com/javafx"
      fx:controller="ui.execution.execution.header.ExecutionHeaderController"
      alignment="CENTER"
      spacing="15"
      styleClass="execution-header"
      stylesheets="@executionHeader.css"
      minHeight="60"
      prefHeight="60">

    <padding>
        <Insets top="10" right="15" bottom="10" left="15"/>
    </padding>

    <!-- User Name Label (LEFT) -->
    <Label fx:id="userNameLabel"
           text="Guest User"
           styleClass="header-label, user-label"/>

    <!-- Spacer -->
    <Region HBox.hgrow="ALWAYS"/>

    <!-- Screen Title (CENTER) -->
    <Label fx:id="screenTitleLabel"
           text="S-Emulator - Execution"
           styleClass="header-title, screen-title"/>

    <!-- Spacer -->
    <Region HBox.hgrow="ALWAYS"/>

    <!-- Available Credits Section (RIGHT) -->
    <HBox alignment="CENTER" spacing="8">
        <Label text="Available Credits:"
               styleClass="header-label, credits-label"/>
        <Label fx:id="creditsValueLabel"
               text="0"
               styleClass="credits-value"/>
    </HBox>

</HBox>