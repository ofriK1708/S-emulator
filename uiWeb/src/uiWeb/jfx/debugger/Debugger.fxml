<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.shape.SVGPath?>
<VBox xmlns:fx="http://javafx.com/fxml/1" spacing="12.0" styleClass="debugger" stylesheets="@Debugger.css"
      xmlns="http://javafx.com/javafx/24.0.1" fx:controller="uiweb.jfx.debugger.DebuggerController">

    <children>
        <GridPane hgap="20" vgap="15">

            <!-- Row 1 -->
            <Button fx:id="stop" onAction="#handleStop" prefHeight="32.0" prefWidth="62.0"
                    styleClass="pill-button, debug-stop" GridPane.columnIndex="0" GridPane.rowIndex="0">
                <graphic>
                    <HBox alignment="CENTER" spacing="10.0">
                        <children>
                            <SVGPath content="M4.5 1.5a3 3 0 0 0-3 3v7a3 3 0 0 0 3 3h7a3 3 0 0 0 3-3v-7a3 3 0 0 0-3-3z"
                                     fill="#e53935" strokeType="OUTSIDE">
                                <HBox.margin>
                                    <Insets/>
                                </HBox.margin>
                            </SVGPath>
                        </children>
                    </HBox>
                </graphic>
                <tooltip>
                    <Tooltip text="Stop"/>
                </tooltip>
            </Button>

            <Button fx:id="resume" onAction="#handleResume" prefHeight="32.0" prefWidth="62.0"
                    styleClass="pill-button, debug-resume" GridPane.columnIndex="1" GridPane.rowIndex="0">
                <graphic>
                    <HBox alignment="CENTER" spacing="10.0">
                        <children>
                            <SVGPath content="M6 18V6h2v12zm4 0l10-6l-10-6z" fill="#00f800"/>
                        </children>
                    </HBox>
                </graphic>
                <tooltip>
                    <Tooltip text="Resume"/>
                </tooltip>
            </Button>

            <!-- Row 2 -->
            <Button fx:id="stepOver" onAction="#handleStepOver" prefHeight="32.0" prefWidth="62.0"
                    styleClass="pill-button, debug-stepOver" GridPane.columnIndex="0" GridPane.rowIndex="1">
                <graphic>
                    <HBox alignment="CENTER" spacing="10.0">
                        <children>
                            <SVGPath
                                    content="M12 19q-1.25 0-2.125-.875T9 16t.875-2.125T12 13t2.125.875T15 16t-.875 2.125T12 19m-7.925-7q.35-2.975 2.6-4.988T11.975 5q1.825 0 3.375.738T18 7.75V5h2v7h-7v-2h4.2q-.8-1.35-2.162-2.175T12 7Q9.8 7 8.125 8.425T6.1 12z"
                                    fill="WHITE"/>
                        </children>
                    </HBox>
                </graphic>
                <tooltip>
                    <Tooltip text="Step Over"/>
                </tooltip>
            </Button>

            <columnConstraints>
                <ColumnConstraints/>
                <ColumnConstraints/>
            </columnConstraints>
            <rowConstraints>
                <RowConstraints/>
                <RowConstraints/>
            </rowConstraints>

        </GridPane>
    </children>

    <padding>
        <Insets bottom="12.0" left="12.0" right="12.0" top="12.0"/>
    </padding>
</VBox>