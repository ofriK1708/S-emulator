/* Modern TableView styling with blue-green-teal color scheme */

/* Font imports for modern look */
@import url('https://fonts.googleapis.com/css2?family=Roboto:wght@300;400;500&display=swap');

.table-view {
    -fx-background-color: transparent;
    -fx-border-color: #e0e0e0;
    -fx-border-radius: 8px;
    -fx-background-radius: 8px;
    -fx-effect: dropshadow(gaussian, rgba(0, 0, 0, 0.1), 10, 0, 0, 5);
    -fx-padding: 0;
    /* Adding table grid lines */
    -fx-table-cell-border-color: rgba(197, 225, 224, 0.5);
    /* Base font for the entire table */
    -fx-font-family: "Roboto", "Segoe UI", "Helvetica Neue", sans-serif;
}

/* Table header styling */
.table-view .column-header-background {
    -fx-background-color: linear-gradient(to bottom, #25a5a0, #1e8883);
    -fx-background-radius: 8px 8px 8px 8px;
    -fx-background-insets: 0 0 0 0;
    -fx-padding: 5px;
}

.table-view .column-header, .table-view .filler {
    -fx-border-width: 0 1 0 1;
    -fx-border-color: transparent #c5e1e0 transparent #c5e1e0;
    -fx-background-color: transparent;
    -fx-text-fill: white;
    -fx-font-size: 14px;
    -fx-font-weight: bold;
    -fx-font-family: "Roboto", "Segoe UI", "Helvetica Neue", sans-serif;
}

.table-view .column-header .label {
    -fx-text-fill: white;
    -fx-alignment: CENTER;
    -fx-font-size: 14px;
    -fx-font-family: "Roboto Medium", "Segoe UI Semibold", "Helvetica Neue", sans-serif;
    -fx-font-weight: 500;
}

/* Table cell styling */
.table-view .table-cell {
    -fx-text-fill: #333333;
    -fx-alignment: CENTER;
    -fx-font-size: 13px;
    -fx-padding: 8px;
    -fx-font-family: "Roboto", "Segoe UI", "Helvetica Neue", sans-serif;
    -fx-font-weight: 400;
}

/* Alternating row colors */
.table-row-cell:odd {
    -fx-background-color: #f5f9fa;
}

.table-row-cell:even {
    -fx-background-color: #e7f2f5;
}

/* Hover effect */
.table-row-cell:hover {
    -fx-background-color: #d4f0ee;
    -fx-text-background-color: #1a7a76;
}

/* Selected row */
.table-row-cell:selected {
    -fx-background-color: #54bebc;
    -fx-text-background-color: white;
}

/* NEW: Highlighted row styling for variable highlighting */
.table-row-cell.highlighted-row {
    -fx-background-color: #fff3cd;
    -fx-border-color: #ffeaa7;
    -fx-border-width: 2px;
    -fx-border-radius: 4px;
    -fx-background-radius: 4px;
}

.table-row-cell.highlighted-row:odd {
    -fx-background-color: #fff3cd;
}

.table-row-cell.highlighted-row:even {
    -fx-background-color: #fff3cd;
}

.table-row-cell.highlighted-row:hover {
    -fx-background-color: #ffeaa7;
}

.table-row-cell.highlighted-row:selected {
    -fx-background-color: #f39c12;
    -fx-text-background-color: white;
}

/* Keep the focus style while showing grid lines */
.table-view:focused {
    -fx-background-color: transparent;
    -fx-focus-color: #25a5a0;
}

/* Scrollbars */
.table-view .scroll-bar:horizontal,
.table-view .scroll-bar:vertical {
    -fx-background-color: transparent;
}

.table-view .scroll-bar:horizontal .thumb,
.table-view .scroll-bar:vertical .thumb {
    -fx-background-color: #92ccc9;
    -fx-background-radius: 5em;
}

.table-view .scroll-bar:horizontal .thumb:hover,
.table-view .scroll-bar:vertical .thumb:hover {
    -fx-background-color: #25a5a0;
}

