<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<AnchorPane xmlns:fx="http://javafx.com/fxml"
            xmlns="http://javafx.com/javafx"
            fx:controller="uiWeb.jfx.dashboard.history.HistoryPanelController"
            styleClass="panel-container, history-panel">

    <VBox AnchorPane.topAnchor="0" AnchorPane.bottomAnchor="0"
          AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0"
          spacing="10">

        <padding>
            <Insets top="10" right="10" bottom="10" left="10"/>
        </padding>

        <!-- Panel Title -->
        <Label text="Users History / Statistics Table" styleClass="panel-title"/>

        <!-- History Table -->
        <TableView fx:id="historyTableView"
                   VBox.vgrow="ALWAYS"
                   styleClass="history-table">

            <columns>
                <TableColumn fx:id="runIdColumn"
                             text="Run ID"
                             prefWidth="60"/>
                <TableColumn fx:id="executionTypeColumn"
                             text="Execution Type"
                             prefWidth="120"/>
                <TableColumn fx:id="programFunctionNameColumn"
                             text="Program/Function Name"
                             prefWidth="150"/>
                <TableColumn fx:id="architectureTypeColumn"
                             text="Architecture Type"
                             prefWidth="130"/>
                <TableColumn fx:id="executionLevelColumn"
                             text="Expand Level"
                             prefWidth="110"/>
                <TableColumn fx:id="finalYValueColumn"
                             text="Final Y Value"
                             prefWidth="100"/>
                <TableColumn fx:id="cycleCountColumn"
                             text="Cycle Count"
                             prefWidth="90"/>
            </columns>

            <placeholder>
                <Label text="No execution history available.\nSelect a user to view their statistics."
                       styleClass="placeholder-text"/>
            </placeholder>

        </TableView>

    </VBox>

</AnchorPane>